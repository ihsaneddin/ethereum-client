{
    "name": "ihsaneddin/ethereum-client",
    "description": "php ethereum network interface",
    "type": "library",
    "authors": [
        {
            "name": "Ihsaneddin",
            "email": "ihsaneddin@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ratchet/pawl": "^0.3.1",
        "guzzlehttp/guzzle": "~6.0",
        "pear/math_biginteger": "dev-trunk",
        "predis/predis": ">=1.1",
        "kornrunner/keccak": "~1.0",
        "phpseclib/phpseclib": "~2.0",
        "kornrunner/ethereum-offline-raw-tx": ">=0.2.3" 
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1@dev",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "classmap": ["src/"],
        "psr-4": {
            "Ihsaneddin\\Ethereum\\": "src/"
        }
    },

    "minimum-stability": "dev",
    "prefer-stable" : true
}
